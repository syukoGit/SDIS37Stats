<Window
    x:Class="Controls.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:statistics="using:Controls.Type.Statistic"
    mc:Ignorable="d">

    <Grid>
        <statistics:NbOperationPerHour x:Name="nbOperationPerHourChart" Grid.Row="0" Grid.Column="0"/>
        <Button x:Name="myButton" Grid.Row="0" Grid.Column="0" Click="MyButton_Click"/>
    </Grid>
</Window>
